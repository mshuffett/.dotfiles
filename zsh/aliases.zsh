alias l=ls
alias ll="ls -lh"
alias dirs="dirs -v"
alias sz="source ~/.zshrc"
alias s="source ~/.zshrc"
alias sa="source ~/.alias"
alias ez="vim ~/.zshrc"
alias ea="vim ~/.alias"
alias shuffle="perl -MList::Util -e 'print List::Util::shuffle <>'"
alias reload!='. ~/.zshrc'
alias lh='ls -a | egrep "^\."' # ls dotfiles only

# Vim is slow
alias vim='vim -X'

alias tmux='tmux -2'
